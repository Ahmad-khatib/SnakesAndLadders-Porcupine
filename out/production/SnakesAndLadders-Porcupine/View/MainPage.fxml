<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane id="mainPage" prefHeight="578.0" prefWidth="713.0" styleClass="mainP" stylesheets="@PorcupineStyle.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainPageController">
    <children>
        <VBox alignment="CENTER" prefHeight="610.0" prefWidth="763.0" spacing="10">
           <children>
      
              <!-- Add ImageView here -->
              <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@Photos/SnakeLadders2.png" />
                  </image>
              </ImageView>
               <Button fx:id="startGameButton" onAction="#startGame" prefHeight="71.0" prefWidth="290.0" style="-fx-background-color: CHOCOLATE; -fx-background-radius: 30;" text="Start Game" textFill="WHITE">
                   <effect>
                       <InnerShadow blurType="GAUSSIAN" choke="0.33" height="20.02" radius="11.215" width="26.84">
                           <input>
                               <DropShadow />
                           </input>
                       </InnerShadow>
                   </effect>
                   <font>
                       <Font name="Jokerman" size="31.0" />
                   </font>
               </Button>
   
               <Button fx:id="ManageQuestionsButton" onAction="#manageQuestions" prefHeight="64.0" prefWidth="290.0" style="-fx-background-color: CHOCOLATE; -fx-background-radius: 30;" text="Manage Questions" textFill="WHITE">
                   <effect>
                       <InnerShadow blurType="GAUSSIAN" choke="0.33" height="23.43" radius="12.067499999999999" width="26.84">
                           <input>
                               <DropShadow />
                           </input>
                       </InnerShadow>
                   </effect>
                   <font>
                       <Font name="Jokerman" size="28.0" />
                   </font>
               </Button>
   
               <Button prefHeight="71.0" prefWidth="290.0" style="-fx-background-color: CHOCOLATE; -fx-background-radius: 30; -fx-background-insets: 0;" text="View History" textFill="WHITE">
                   <effect>
                       <InnerShadow blurType="GAUSSIAN" choke="0.33" height="20.02" radius="11.215" width="26.84">
                           <input>
                               <DropShadow />
                           </input>
                       </InnerShadow>
                   </effect>
                   <font>
                       <Font name="Jokerman" size="25.0" />
                   </font>
               </Button>
           </children>
        </VBox>
    </children>
</StackPane>
