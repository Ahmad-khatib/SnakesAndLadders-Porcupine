<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="400.0" prefWidth="600.0" styleClass="manageQ" stylesheets="@PorcupineStyle.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AddQuestionController">
    <children>
        <VBox layoutX="118.0" layoutY="33.0" prefHeight="462.0" prefWidth="644.0" spacing="10.0">
            <children>
                <Label style="-fx-font-family: 'Jokerman'; -fx-font-size: 36px;" text="Add Question" textFill="#b5531b" />
                <TextArea fx:id="questionTextArea" prefHeight="131.0" prefWidth="600.0" promptText="Enter the question here" style="-fx-font-family: 'Arial Rounded MT Bold'; -fx-font-size: 18px;" />
                <HBox spacing="10.0">
                    <children>
                  <VBox prefHeight="219.0" prefWidth="600.0">
                     <children>
                              <TextArea fx:id="answer1TextArea" prefHeight="127.0" prefWidth="147.0" promptText="Answer 1" style="-fx-font-family: 'Arial Rounded MT Bold'; -fx-font-size: 18px;" />
                              <TextArea fx:id="answer2TextArea" prefHeight="128.0" prefWidth="146.0" promptText="Answer 2" style="-fx-font-family: 'Arial Rounded MT Bold'; -fx-font-size: 18px;" />
                              <TextArea fx:id="answer3TextArea" prefHeight="128.0" prefWidth="150.0" promptText="Answer 3" style="-fx-font-family: 'Arial Rounded MT Bold'; -fx-font-size: 18px;" />
                              <TextArea fx:id="answer4TextArea" prefHeight="128.0" prefWidth="151.0" promptText="Answer 4" style="-fx-font-family: 'Arial Rounded MT Bold'; -fx-font-size: 18px;" />
                     </children>
                  </VBox>
                    </children>
                </HBox>
                <HBox spacing="10.0">
                   <children>
                       <Label style="-fx-font-family: 'Jokerman'; -fx-font-size: 18px;" text="Level:" textFill="WHITE" />
                       <ChoiceBox fx:id="levelChoiceBox" prefWidth="150.0">
                        <!-- Add choice box items here -->
                    </ChoiceBox>
                   </children>
                </HBox>
                <HBox spacing="10.0">
                   <children>
                       <Label style="-fx-font-family: 'Jokerman'; -fx-font-size: 18px;" text="Correct Answer:" textFill="WHITE" />
                       <ChoiceBox fx:id="correctAnswerChoiceBox" prefWidth="150.0">
                        <!-- Add choice box items here -->
                    </ChoiceBox>
                   </children>
                </HBox>
                <Button fx:id="saveButton" mnemonicParsing="false" style="-fx-font-family: 'Jokerman'; -fx-font-size: 18px; -fx-background-color: CHOCOLATE; -fx-background-radius: 30;" text="Save" textAlignment="CENTER">
               <effect>
                  <InnerShadow />
               </effect></Button>
            </children>
        </VBox>
    </children>
</StackPane>
